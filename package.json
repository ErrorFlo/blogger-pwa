{
  "name": "blogger-pwa",
  "version": "0.0.1",
  "private": true,
  "description": "Build a PWA for your Blogger Site",
  "license": "MIT",
  "author": {
    "name": "Deo Kumar",
    "url": "https://github.com/kumardeo"
  },
  "homepage": "https://github.com/kumardeo/blogger-pwa",
  "repository": {
    "type": "git",
    "url": "https://github.com/kumardeo/blogger-pwa"
  },
  "bugs": {
    "url": "https://github.com/kumardeo/blogger-pwa/issues"
  },
  "packageManager": "npm@10.9.2",
  "type": "module",
  "scripts": {
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "check:types": "tsc --noEmit",
    "generate": "tsx ./scripts/generate.ts",
    "build": "npm run generate && wrangler deploy --dry-run --outdir=.workers-build",
    "deploy": "npm run generate && wrangler deploy",
    "dev": "npm run generate && wrangler dev",
    "cf-typegen": "wrangler types workers/workers-types.d.ts",
    "upgrade": "ncu --interactive"
  },
  "dependencies": {
    "deepmerge": "^4.3.1",
    "hono": "^4.7.8",
    "mime": "^4.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.14.0",
    "arg": "^5.0.2",
    "console-log-colors": "^0.5.0",
    "esbuild": "^0.25.3",
    "favicons": "^7.2.0",
    "nanoid": "^5.1.5",
    "npm-check-updates": "^18.0.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "workbox-core": "^7.3.0",
    "workbox-expiration": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0",
    "workbox-window": "^7.3.0",
    "wrangler": "^4.14.1",
    "xml-js": "^1.6.11"
  }
}
